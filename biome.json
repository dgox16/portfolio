{
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "noForEach": "off"
            },
            "nursery": {
                "useImportRestrictions": "off"
            }
        }
    },
    "formatter": {
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    }
}
